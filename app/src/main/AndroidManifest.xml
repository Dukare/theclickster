<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shubham.theclickster">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".GameMenu"
            android:label="@string/title_activity_game_menu"
            android:screenOrientation="landscape" /> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".StartGame"
            android:screenOrientation="landscape" />
        <activity
            android:name=".HighsScore"
            android:screenOrientation="landscape" />
        <activity
            android:name=".About"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Levels"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AddSdkr"
            android:label="@string/title_activity_add_sdkr" />
        <activity
            android:name=".GameAdd"
            android:label="@string/title_activity_game_add" />
        <activity
            android:name=".LevelTwo"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LevelThree"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LevelFive"
            android:screenOrientation="landscape" />
        <activity android:name=".LevelFour"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>